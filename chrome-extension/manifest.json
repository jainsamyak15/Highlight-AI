{
  "manifest_version": 3,
  "name": "Highlight.ai - Smart Reading Assistant",
  "version": "1.0.0",
  "description": "AI-powered reading comprehension and note-taking with Notion integration",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus",
    "identity"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "https://api.notion.com/*",
    "https://api.dictionaryapi.dev/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/logo_13_0.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/logo_13_0.png",
    "48": "icons/logo_13_0.png",
    "128": "icons/logo_13_0.png"
  },
  "oauth2": {
    "client_id": "YOUR_NOTION_CLIENT_ID",
    "scopes": [
      "https://api.notion.com/v1/oauth/authorize"
    ]
  }
}